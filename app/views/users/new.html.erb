<h1>Create a New User</h1>

<%= form_for @user do |f| %>
		<%= f.label "First Name" %>
		<p><%= f.text_field :fname %></p>
		<%= f.label "Last Name" %>
		<p><%= f.text_field :lname %></p>
		<%= f.label "Username" %>
		<p><%= f.text_field :username %></p>
		<%= f.label "E-mail" %>
		<p><%= f.text_field :email %></p>
		<%= f.label "Password" %>
		<p><%= f.text_field :password %></p>
		<%= f.label "Country" %>
		<p><%= f.text_field :country %></p>
		<%= f.submit "Create" %>
<% end %>